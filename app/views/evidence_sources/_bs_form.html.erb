  
<%= bootstrap_form_for :evidence_source do |f| %>
  <%= f.text_field :type %>
  <%= f.text_field :title %>
  <%= f.text_field :year %>
  <%= f.text_field :author %>
  <%= f.text_field :source_title %>
  <%= f.text_field :publisher %>
  <%= f.text_field :volume_number %>
  <%= f.text_field :issue_number %>
  <%= f.text_field :page %>
  <%= f.submit "SUBMIT" %>
<% end %>
